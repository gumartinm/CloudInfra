{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Simple template example with one instance",
  "Parameters": {
    "KeyName": {
      "Description": "Name of an existing EC2 KeyPair to enable SSH access to the instance",
      "Type": "AWS::EC2::KeyPair::KeyName",
      "ConstraintDescription": "must be the name of an existing EC2 KeyPair."
    }
  },
  "Resources": { 
    "SimpleServerInstance": { 
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "DisableApiTermination": "false",
        "InstanceInitiatedShutdownBehavior": "stop",
        "ImageId": "ami-ae0937c8",
        "InstanceType": "m3.large",
        "KernelId": "aki-dc9ed9af",
        "KeyName": {
          "Ref": "KeyName"
        },
        "Monitoring": "false",
        "Tags": [
          {
            "Key": "Name",
            "Value": "instanceGUS"
          }
        ],
        "NetworkInterfaces": [
          {
            "DeleteOnTermination": "true",
            "Description": "GUS Network Interface",
            "DeviceIndex": 0,
            "SubnetId": {
              "Ref": "subnet-gus"
            },
            "PrivateIpAddresses": [
              {
                "PrivateIpAddress": "192.168.97.30",
                "Primary": "true"
              }
            ],
            "GroupSet": [
              {
                "Ref": "security-group-gus"
              }
            ],
            "AssociatePublicIpAddress": "true"
          }
        ]
      }
    },
    "vpc-gus": {
      "Type": "AWS::EC2::VPC",
      "Properties": {
        "CidrBlock": "192.168.96.0/22",
        "InstanceTenancy": "default",
        "EnableDnsSupport": "true",
        "EnableDnsHostnames": "true",
        "Tags": [
          {
            "Key": "Name",
            "Value": "VPC GUS"
          }
        ]
      }
    },
    "subnet-gus": {
      "Type": "AWS::EC2::Subnet",
      "Properties": {
        "CidrBlock": "192.168.97.0/26",
        "AvailabilityZone": "eu-west-1a",
        "VpcId": {
          "Ref": "vpc-gus"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "PublicGUS"
          }
        ]
      }
    },
    "security-group-gus": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupDescription": "default VPC security group",
        "VpcId": {
          "Ref": "vpc-gus"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "SecurityGroup GUS"
          }
        ]
      }
    },
    "ingressSSH": {
      "Type": "AWS::EC2::SecurityGroupIngress",
      "Properties": {
        "GroupId": {
          "Ref": "security-group-gus"
        },
        "IpProtocol": "tcp",
        "FromPort": "22",
        "ToPort": "22",
        "CidrIp": "YOUR.IP.V4.ADDRES/32"
      }
    }
  }
}
